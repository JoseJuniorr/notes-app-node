<div class="row mt-3">
    {{#each notes}}
    <pre>{{notes}}</pre>
    <div class="col-md-3">
        <div class="card mb-3">

            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">{{title}} <a
                        href="/notes/edit/{{_id}}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> </h4>
                <p>{{description}}</p>
                <button type="submit" class="btn btn-outline-danger mt-2 btn-block" data-toggle="modal"
                    data-target="#delete-note">Excluir</button>

            </div>
        </div>
    </div>



    <div class="modal fade" id="delete-note" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Deletar categoria</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Tem certeza que deseja deletar esta nota?
                </div>
                <div class="modal-footer">
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-outline-danger ">Excluir</button>
                    </form>

                </div>
            </div>
        </div>
    </div>




    {{else}}
    <h4>Não há notas para exibir!</h4>

    {{/each}}
</div>
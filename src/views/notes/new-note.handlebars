<div class="col-md-4 mx-auto text-center">

    <div class="card">
        <div class="card-header">
            <h3>Nova Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/create" method="POST">
                <label for="title">Título: </label>
                <input type="text" id="title" name="title" placeholder="Nova nota" class="form-control">
                <label for="description">Conteúdo: </label>
                <textarea type="text" id="description" name="description" placeholder="Conteúdo da nota"
                    class="form-control"></textarea>

                <br>
                <button type="submit" class="btn btn-success">Criar Nota</button>
            </form>
        </div>

    </div>
</div>